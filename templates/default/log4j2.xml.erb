<?xml version="1.0" encoding="UTF-8"?>
<Configuration monitorInterval="15" packages="org.apache.logging.log4j.flume.appender">
    <Appenders>
        <Console name="STDOUT">
            <PatternLayout pattern="%d %-4r [%t] %-5p %c - %m%n"/>
        </Console>
        <RollingFile name="RollingFile" fileName="/var/log/repose/current.log"
                     filePattern="/var/log/repose/current-%d{yyyy-MM-dd_HHmmss}.log">
            <PatternLayout pattern="%d %-4r [%t] %-5p %c - %m%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="1024 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
        <RollingFile name="blueflood-<%= host_type %>" fileName="/var/log/repose/blueflood-<%= host_type %>.log"
                     filePattern="/var/log/repose/blueflood-<%= host_type %>-%d{yyyy-MM-dd_HHmmss}.log">
            <PatternLayout pattern="%m%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="1024 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="DEBUG">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="RollingFile"/>
        </Root>
        <Logger name="com.sun.jersey" level="off"/>
        <Logger name="net.sf.ehcache" level="error"/>
        <Logger name="org.apache" level="warn"/>
        <Logger name="org.eclipse.jetty" level="off"/>
        <Logger name="org.springframework" level="warn"/>
        <Logger name="org.openrepose" level=""/>
        <Logger name="intrafilter-logging" level=""/>
        <Logger name="<%= host_type %>-repose-http-log" level="info">
            <AppenderRef ref="blueflood-<%= host_type %>"/>
        </Logger>
    </Loggers>
</Configuration>
